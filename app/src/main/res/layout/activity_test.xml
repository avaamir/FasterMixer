<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_login_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin"
        tools:context=".ui.activities.TestActivity">

        <Button
            android:id="@+id/btnShowAllMixersToggle"
            android:layout_width="wrap_content"
            android:minWidth="130dp"
            android:layout_height="wrap_content"
            android:text="سلام"
            android:fontFamily="@font/iransans"
            android:textColor="@color/black"
            android:backgroundTint="#00FFFFFF"/>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/message"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <include
            android:id="@+id/l_demo"
            layout="@layout/layout_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--  <CalendarView
              android:id="@+id/calendarView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/standard_margin"
              />-->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Download"
            android:background="@drawable/bg_glassy"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnInstall"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glassy"
            android:backgroundTint="@color/btn_yellow"
            android:text="Install"
            android:textAllCaps="false" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>