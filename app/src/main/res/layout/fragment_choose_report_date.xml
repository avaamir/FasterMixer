<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.fragments.admin.reports.ChooseReportDateFragment">

            <RelativeLayout
                android:id="@+id/frameStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">


                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/yearPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />


                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/monthPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />


                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/dayPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/iransans"
                    android:text="تاریخ شروع"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout6" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frameStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp">

                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/startHourPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />


                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/startMinutePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />

                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/startSecondPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/iransans"
                    android:text="ساعت شروع"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frameEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp">

                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/endYearPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />


                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/endMonthPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />

                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/endDayPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/iransans"
                    android:text="تاریخ پایان"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout7"
                    app:layout_constraintEnd_toEndOf="parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frameEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp">

                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/endHourPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />


                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/endMinutePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText" />

                    <com.behraz.fastermixer.batch.ui.customs.general.MyPicker
                        android:id="@+id/endSecondPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerCustomText"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/iransans"
                    android:text="ساعت پایان"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>





            <androidx.cardview.widget.CardView
                android:id="@+id/btnContinue"
                style="@style/my_clickable_card_style"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/btn_yellow"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/standard_margin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/tiny_margin"
                        android:src="@drawable/ic_keyboard_arrow_left"
                        app:tint="@color/white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/iransans"
                        android:text="ادامه"
                        android:textColor="@color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>