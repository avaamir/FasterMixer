<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.admin.reports.ChooseReportEquipmentFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:itemCount="2"
            tools:listitem="@layout/item_admin_equipment"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tvNoEquipmentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/my_black_bold_text"
            android:text="تجهیزی تعریف نشده است"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:visibility="gone"
            />

    </FrameLayout>
</layout>